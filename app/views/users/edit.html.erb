<% provide :title, t("users.edit.title") %>
<%= provide :button_text, t("users.edit.save")%>
<h1><%= t("users.edit.header") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form", user: @user, genders: @genders %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t("users.edit.gravata"), "http://gravatar.com/emails", target: "_blank" %>
    </div>
  </div>
</div>
