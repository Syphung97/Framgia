<% provide :title, t("users.new.titlepg") %>
<h1><%= t "users.new.titlepg"%></h1>
<%= raw t "users.new.description"%>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages", user: @user %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("users.new.confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.label :gender %>
      <%= f.select :gender, options_for_select(@genders.keys.unshift("Select"), @user.gender) %>

      <%= f.submit t("users.new.create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
