<%= form_for micropost, remote: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("compose_new_micropost") %>
  </div>
  <span class="picture">
    <%= f.file_field :picture %>
  </span>
  <%= f.submit t("share.post"), class: "btn btn-primary" %>
<% end %>
