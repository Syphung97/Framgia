<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("static_pages.home.name"), "#", class: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.titlepg"), root_path %></li>
        <li><%= link_to t("static_pages.help.titlepg"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("static_pages.home.users"), "#" %></li>
          <li class="dropdown">
             <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
              <%= t "account" %><b class="caret"></b>
            <% end %>

            <ul class="dropdown-menu">
              <li><%= link_to t("static_pages.home.profile"), current_user %></li>
              <li><%= link_to t("static_pages.home.settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("static_pages.home.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("static_pages.home.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
