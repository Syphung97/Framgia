<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.micropost.size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <% if micropost.user.current_user? current_user%>
    <div id="edit_form" style="display: none;">
    </div>
  <% end %>
  <div id="cnt-<%= micropost.id %>">
    <%= render "microposts/content", micropost: micropost %>
  </div>
  <span class="timestamp">
    <%= t("posted") %> <%= time_ago_in_words micropost.created_at %> <%= t("ago") %>
     <% if micropost.user.current_user? current_user %>
      <%= link_to "Edit", inline_edit_micropost_path(micropost), remote: true%>
      <%= link_to t("share.delete"), micropost, method: :delete,
        remote: true, data: {confirm: t("share.confirm")} %>
      <% end %>
  </span>
</li>
